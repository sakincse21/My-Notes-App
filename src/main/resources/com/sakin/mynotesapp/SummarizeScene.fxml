<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER_LEFT" spacing="15" style="-fx-padding: 20;" stylesheets="@styles/style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sakin.mynotesapp.SummarizeController">
    <TextArea fx:id="promptBox" promptText="Enter a custom prompt (optional)" style="-fx-font-size: 14px; -fx-border-radius: 5; -fx-background-radius: 5;" wrapText="true">
      <font>
         <Font name="Poppins Regular" size="12.0" />
      </font></TextArea>
    <Button fx:id="sendBtn" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 5;" text="Send" />
</VBox>
